{
  "include": ["./src/**/*.test.ts", "./src/**/*.ts"],
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "build/",
    "strict": true,
    "target": "es2018",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  }
}
